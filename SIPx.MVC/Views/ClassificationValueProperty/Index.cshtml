@model List<ClassificationLevelIndexGet>
@{
    var AllStuff = (ViewBagModel)ViewBag.AllStuff;
    ViewData["Title"] = @AllStuff.UITerms.Find(x => x.InternalName.Equals("Classification levels")).TermString;
    ViewData["Image"] = "ValueProperty.png";
    ViewData["FavoriteGroup"] = AllStuff.FavoriteGroupList;

    Layout = "_LayoutAdmin";
}
<ejs-grid id="Grid" dataSource="@Model" allowPaging="true" allowSorting="true" allowResizing="true">
    <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
    <e-grid-columns>
        <e-grid-column field="ClassificationLevelId" headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Id")).TermString" textAlign="Right" type="number"></e-grid-column>
        <e-grid-column field="Name" headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Name")).TermString" textAlign="Right" type="string"></e-grid-column>
        <e-grid-column field="DateLevelName" headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Date level name")).TermString" textAlign="Right" type="string"></e-grid-column>
        <e-grid-column field="OnTheFly" headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("On the fly")).TermString" textAlign="Right" type="string"></e-grid-column>
        <e-grid-column field="Alphabetically" headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Alphabetically")).TermString" textAlign="Right" type="string"></e-grid-column>
        <e-grid-column field="CanLink" headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Can link")).TermString" textAlign="Right" type="string"></e-grid-column>
        <e-grid-column field="InDropDown" headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("In dropdown")).TermString" textAlign="Right" type="string"></e-grid-column>
        <e-grid-column field="InMenu" headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("In menu")).TermString" textAlign="Right" type="string"></e-grid-column>
        <e-grid-column template="#Properties" textAlign="Center" type="string"></e-grid-column>
        <e-grid-column template="#Edit" textAlign="Center" type="string"></e-grid-column>
        <e-grid-column template="#Languages" textAlign="Center" type="string"></e-grid-column>
        <e-grid-column template="#Delete" textAlign="Center" type="string"></e-grid-column>
    </e-grid-columns>
</ejs-grid>
<a asp-controller="Classification" asp-action="Index">@AllStuff.UITerms.Find(x => x.InternalName.Equals("Back to classifications")).TermString</a>
<a asp-controller="ClassificationLevel" asp-action="Create" asp-route-id="@ViewBag.Id">@AllStuff.UITerms.Find(x => x.InternalName.Equals("Add new classification level")).TermString</a>
<script id="Properties" type="text/x-template">
    <div>
        <a class="nav-link text-dark font-weight-bold" href="/ClassificationLevelProperty/Index/${ClassificationLevelId}"><img src="/images/icons/Property.png" height="18" width="18" title="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Properties")).TermString" /></a>

    </div>
</script>
<script id="Edit" type="text/x-template">
    <div>
        <a class="nav-link text-dark font-weight-bold" href="/ClassificationLevel/Edit/${ClassificationLevelId}"><img src="/images/icons/EditS.png" height="18" width="18" title="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Edit")).TermString" /></a>

    </div>
</script>
<script id="Languages" type="text/x-template">
    <div>
        <a class="nav-link text-dark font-weight-bold" href="/ClassificationLevel/LanguageIndex/${ClassificationLevelId}"><img src="/images/icons/LanguageS.png" height="18" width="50" title="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Languages")).TermString" /></a>

    </div>
</script>
<script id="Delete" type="text/x-template">
    <div>
        <a class="nav-link text-dark font-weight-bold" href="/ClassificationLevel/Delete/${ClassificationLevelId}"><img src="/images/icons/DeleteS.png" height="18" width="18" title="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Delete")).TermString" /></a>

    </div>
</script>
