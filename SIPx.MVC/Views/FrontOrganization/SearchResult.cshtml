@model List<OrganizationAdvancedSearchResult>
@{
    var AllStuff = (ViewBagModel)ViewBag.AllStuff;
    ViewData["Title"] = @AllStuff.UITerms.Find(x => x.InternalName.Equals("Organization search result")).TermString;
    ViewData["Image"] = "Organization.png";
    ViewData["FavoriteGroup"] = AllStuff.FavoriteGroupList;
    Layout = "_Layout";
}
<div class="container">
    <ejs-grid id="Grid" dataSource="@Model" allowPaging="true" allowSorting="true" allowResizing="true">
        <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
        <e-grid-columns>
            <e-grid-column headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Name")).TermString" template="#OrganizationName" textAlign="Center" type="string"></e-grid-column>
            <e-grid-column headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Creator")).TermString" template="#CreatorName" textAlign="Center" type="string"></e-grid-column>
        </e-grid-columns>
    </ejs-grid>
</div>
<script id="OrganizationName" type="text/x-template">
    <div class="leftAlignGridColumn">
        <a class="nav-link text-dark font-weight-bold" href="/FrontOrganization/Dashboard/${OrganizationId}"><u>${OrganizationName}</u></a>
    </div>
</script>
<script id="CreatorName" type="text/x-template">
    <div class="leftAlignGridColumn">
        <a class="nav-link text-dark font-weight-bold" href="/FrontUser/Dashboard/${CreatorId}"><u>${CreatorName}</u></a>
    </div>
</script>
