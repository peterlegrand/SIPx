@model FrontOrganizationIndexGet
@{
    var Term = (List<UITermLanguageCustomizationList>)ViewBag.UITerms;
    ViewData["Title"] = @Term.Find(x => x.InternalName.Equals("Organization dashboard")).TermString;
    Layout = "_Layout";
}
<div class="row">
    <div class="col-12">
        <h1>@Term.Find(x => x.InternalName.Equals("Organization dashboard")).TermString: @Model.Name</h1>
    </div>
</div>
<div class="row">
    <div class="col-7 ">
        @Model.Description
    </div>

    <div class="col-2">
        <div> @Term.Find(x => x.InternalName.Equals("Parent")).TermString: </div>
        <div> @Term.Find(x => x.InternalName.Equals("Status")).TermString:</div>
        <div> @Term.Find(x => x.InternalName.Equals("Type")).TermString:</div>
        <div> @Term.Find(x => x.InternalName.Equals("Creator")).TermString:</div>
        <div> @Term.Find(x => x.InternalName.Equals("Created date")).TermString:</div>
        <div> @Term.Find(x => x.InternalName.Equals("Modifier")).TermString:</div>
        <div> @Term.Find(x => x.InternalName.Equals("Modified date")).TermString:</div>
    </div>
    <div class="col-3">
        <div> @Model.ParentOrganizationName</div>
        <div> @Model.StatusName</div>
        <div> @Model.OrganizationTypeName</div>
        <div> <a asp-controller="FrontUser" asp-action="Dashboard" asp-route-id="@Model.CreatorId"> @Model.CreatorName</a></div>
        <div> @Model.CreatedDate</div>
        <div> <a asp-controller="FrontUser" asp-action="Dashboard" asp-route-id="@Model.ModifierId"> @Model.ModifierName</a></div>
        <div> @Model.ModifiedDate</div>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <div><h2>@Term.Find(x => x.InternalName.Equals("Sub organizations")).TermString</h2></div>
        <ejs-grid id="SubOrganizations" dataSource="@Model.SubOrganizations" allowPaging="true" allowSorting="true" allowResizing="true" rowHeight="30">
            <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column field="Name" headerText="" textAlign="Right" type="text"></e-grid-column>
                <e-grid-column field="OrganizationTypeName" headerText="" textAlign="Right" type="text" template="#OrganizationName"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
    <div class="col-6">
        <div><h2>@Term.Find(x => x.InternalName.Equals("Members")).TermString</h2></div>
        <ejs-grid id="Members" dataSource="@Model.Members" allowPaging="true" allowSorting="true" allowResizing="true" rowHeight="30">
            <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="@Term.Find(x => x.InternalName.Equals("Role")).TermString" field="RoleName" textAlign="Right" type="text"></e-grid-column>
                <e-grid-column headerText="@Term.Find(x => x.InternalName.Equals("First name")).TermString" field="FirstName" textAlign="Right" type="text"></e-grid-column>
                <e-grid-column headerText="@Term.Find(x => x.InternalName.Equals("Last name")).TermString" field="LastName" textAlign="Right" type="text"></e-grid-column>
                <e-grid-column headerText="@Term.Find(x => x.InternalName.Equals("Organization")).TermString" field="DefaultOrganizationName" textAlign="Right" type="text"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
        <ejs-treeview id="listdata">
            <e-treeview-fields dataSource="@Model.SubOrganizationTree" id="Name" parentId="Name" text="Name" hasChildren="SubOrganizations" expanded="expanded"></e-treeview-fields>
        </ejs-treeview>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <div><h2>@Term.Find(x => x.InternalName.Equals("Content")).TermString</h2></div>
        <ejs-grid id="Contents" dataSource="@Model.Contents" allowPaging="true" allowSorting="true" allowResizing="true" rowHeight="30">
            <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="@Term.Find(x => x.InternalName.Equals("Title")).TermString" field="Title" textAlign="Right" type="text" template="#Content"></e-grid-column>
                <e-grid-column headerText="@Term.Find(x => x.InternalName.Equals("Type")).TermString" field="TypeName" textAlign="Right" type="text"></e-grid-column>
                <e-grid-column headerText="@Term.Find(x => x.InternalName.Equals("Status")).TermString" field="StatusName" textAlign="Right" type="text"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
    <div class="col-6">
        <div><h2>@Term.Find(x => x.InternalName.Equals("Processes")).TermString</h2></div>
        <ejs-grid id="Processes" dataSource="@Model.Processes" allowPaging="true" allowSorting="true" allowResizing="true" rowHeight="30">
            <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="@Term.Find(x => x.InternalName.Equals("Subject")).TermString" field="Subject" textAlign="Right" type="text"></e-grid-column>
                <e-grid-column headerText="@Term.Find(x => x.InternalName.Equals("Process template")).TermString" field="ProcessTemplateName" textAlign="Right" type="text"></e-grid-column>
                <e-grid-column headerText="@Term.Find(x => x.InternalName.Equals("Stage")).TermString" field="ProcessTemplateStageTypeName" textAlign="Right" type="text"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
</div>
<script id="OrganizationName" type="text/x-template">
    <div>
        <a class="nav-link text-dark font-weight-bold" href="/FrontOrganization/Dashboard/${OrganizationId}"><u>${OrganizationName}</u></a>

    </div>
</script>
<script id="Content" type="text/x-template">
    <div>
        <a class="nav-link text-dark font-weight-bold" href="/FrontContent/ShowContent/${ContentId}"><u>${Title}</u></a>

    </div>
</script>
