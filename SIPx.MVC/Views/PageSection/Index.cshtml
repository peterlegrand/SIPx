@model List<PageSectionIndexGet>
@{
    var AllStuff = (ViewBagModel)ViewBag.AllStuff;
    ViewData["Title"] = @AllStuff.UITerms.Find(x => x.InternalName.Equals("Page sections")).TermString;
    ViewData["Image"] = "Panel.png";
    ViewData["FavoriteGroup"] = AllStuff.FavoriteGroupList;
    Layout = "_LayoutAdmin";
}
<ejs-grid id="Grid" dataSource="@Model" allowPaging="true" allowSorting="true" allowResizing="true">
    <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
    <e-grid-columns>
        <e-grid-column field="PageSectionID" headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Id")).TermString" textAlign="Right" type="number"></e-grid-column>
        <e-grid-column field="Name" headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Name")).TermString" textAlign="Right" type="string"></e-grid-column>
        <e-grid-column field="MenuName" headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Menu name")).TermString" textAlign="Right" type="string"></e-grid-column>
        <e-grid-column field="MouseOver" headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Mouse over")).TermString" textAlign="Right" type="string"></e-grid-column>
        <e-grid-column field="TitleName" headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Title name")).TermString" textAlign="Right" type="string"></e-grid-column>
        <e-grid-column field="TitleDescription" headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Title description")).TermString" textAlign="Right" type="string"></e-grid-column>
        <e-grid-column field="StatusName" headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Status name")).TermString" textAlign="Right" type="string"></e-grid-column>
        <e-grid-column template="#ProcessCondition" textAlign="Center" type="string"></e-grid-column>
        <e-grid-column template="#ContentCondition" textAlign="Center" type="string"></e-grid-column>
        <e-grid-column template="#Edit" textAlign="Center" type="string"></e-grid-column>
        <e-grid-column template="#Languages" textAlign="Center" type="string"></e-grid-column>
        <e-grid-column template="#Delete" textAlign="Center" type="string"></e-grid-column>
    </e-grid-columns>
</ejs-grid>
<a href="/Page/Index">@AllStuff.UITerms.Find(x => x.InternalName.Equals("Back to pages")).TermString</a>
<a asp-controller="PageSection" asp-action="Create" asp-route-id="@ViewBag.Id">@AllStuff.UITerms.Find(x => x.InternalName.Equals("Add new page section")).TermString</a>

<script id="Edit" type="text/x-template">
    <div>
        <a class="nav-link text-dark font-weight-bold" href="/PageSection/Edit/${PageSectionId}"><img src="/images/icons/EditS.png" height="18" width="18" title="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Edit")).TermString" /></a>

    </div>
</script>
<script id="Languages" type="text/x-template">
    <div>
        <a class="nav-link text-dark font-weight-bold" href="/PageSection/LanguageIndex/${PageSectionId}"><img src="/images/icons/LanguageS.png" height="18" width="50" title="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Languages")).TermString" /></a>

    </div>
</script>
<script id="Delete" type="text/x-template">
    <div>
        <a class="nav-link text-dark font-weight-bold" href="/PageSection/Delete/${PageSectionId}"><img src="/images/icons/DeleteS.png" height="18" width="18" title="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Delete")).TermString" /></a>

    </div>
</script>
<script id="ProcessCondition" type="text/x-template">
    <div>
        <a class="nav-link text-dark font-weight-bold" href="/PageSectionProcessCondition/Index/${PageSectionId}"><img src="/images/icons/Process.png" height="18" width="18" title="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Process condition")).TermString" /></a>
    </div>
</script>
</script>
<script id="ContentCondition" type="text/x-template">
    <div>
        <a class="nav-link text-dark font-weight-bold" href="/PageSectionContentCondition/Index/${PageSectionId}"><img src="/images/icons/Content.png" height="18" width="18" title="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Content condition")).TermString" /></a>
    </div>
</script>
