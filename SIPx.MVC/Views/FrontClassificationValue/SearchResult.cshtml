@model List<ClassificationValueAdvancedSearchResult>
@{
    var Term = (List<UITermLanguageCustomizationList>)ViewBag.UITerms;
    //ViewData["Title"] = @Term.Find(x => x.InternalName.Equals("Person search result")).TermString;
    Layout = "_Layout";
}
@*<h1>@Term.Find(x => x.InternalName.Equals("Person search result")).TermString</h1>*@
<div class="container">
    @*<img src="~/images/icons/Persons.png" width="50" height="50" />*@
    <ejs-grid id="Grid" dataSource="@Model" allowPaging="true" allowSorting="true" allowResizing="true">
        <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
        <e-grid-columns>
            <e-grid-column headerText="" template="#ClassificationValueName" textAlign="Center" type="string"></e-grid-column>
            <e-grid-column headerText="" template="#ClassificationName" textAlign="Center" type="string"></e-grid-column>
        </e-grid-columns>
    </ejs-grid>
    <script id="ClassificationValueName" type="text/x-template">
        <div>
            <a class="nav-link text-dark font-weight-bold" href="/FrontClassificationValue/Dashboard/${ClassificationValueId}"><u>${ClassificationValueName}</u></a>

        </div>
    </script>
    <script id="ClassificationName" type="text/x-template">
        <div>
            ${ClassificationName}
        </div>
    </script>
