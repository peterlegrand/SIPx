@model List<PersonAdvancedSearchResult>
@{
    var AllStuff = (ViewBagModel)ViewBag.AllStuff;
    ViewData["Title"] = @AllStuff.UITerms.Find(x => x.InternalName.Equals("Person search result")).TermString;
    ViewData["Image"] = "Person.png";
    ViewData["FavoriteGroup"] = AllStuff.FavoriteGroupList;
    Layout = "_Layout";
}
<div class="container">
    <ejs-grid id="Grid" dataSource="@Model" allowPaging="true" allowSorting="true" allowResizing="true">
        <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
        <e-grid-columns>
            <e-grid-column headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("First name")).TermString" template="#FirstName" textAlign="Center" type="string"></e-grid-column>
            <e-grid-column headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Middle name")).TermString" template="#MiddleName" textAlign="Center" type="string"></e-grid-column>
            <e-grid-column headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Last name")).TermString" template="#LastName" textAlign="Center" type="string"></e-grid-column>
        </e-grid-columns>
    </ejs-grid>
</div>
<script id="FirstName" type="text/x-template">
    <div class="leftAlignGridColumn">
        <a class="nav-link text-dark font-weight-bold" href="/FrontPerson/Dashboard/${PersonId}"><u>${FirstName}</u></a>

    </div>
</script>
<script id="MiddleName" type="text/x-template">
    <div class="leftAlignGridColumn">
        ${MiddleName}
    </div>
</script>
<script id="LastName" type="text/x-template">
    <div class="leftAlignGridColumn">
        ${LastName}
    </div>
</script>
