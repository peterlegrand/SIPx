@using Syncfusion.EJ2
@using Newtonsoft.Json
@model ClassificationLevelPropertyCreateGet
@{
    var Term = (List<UITermLanguageCustomizationList>)ViewBag.UITerms;
    var ErrorMessages = (List<ErrorMessage>)ViewBag.ErrorMessages;
    ViewData["Title"] = @Term.Find(x => x.InternalName.Equals("New classification level property")).TermString;
    ViewData["Image"] = "Property.png";
    ViewData["FavoriteGroup"] = @ViewBag.FavoriteGroupList;
}

<div class="container">
    <form method="post">
        @if (ViewBag.Env == "Production")
        {
