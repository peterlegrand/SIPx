@model List<UserMenuIndexGet>
@{
    var Term = (List<UITermLanguageCustomizationList>)ViewBag.UITerms;
    ViewData["Title"] = @Term.Find(x => x.InternalName.Equals("User menu")).TermString;

}

<h1><img src="~/images/icons/Classification.png" width="50" height="50" />@Term.Find(x => x.InternalName.Equals("User menu")).TermString</h1>
<ejs-grid id="Grid" dataSource="@Model" allowPaging="true" allowSorting="true" allowResizing="true" rowHeight="30">
    <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
    <e-grid-columns>
        <e-grid-column headerText="@Term.Find(x => x.InternalName.Equals("Id")).TermString" Template="#Id" textAlign="Right" type="number"></e-grid-column>
        <e-grid-column headerText="@Term.Find(x => x.InternalName.Equals("Name")).TermString" Template="#Name" textAlign="Right" type="string"></e-grid-column>
        <e-grid-column headerText="@Term.Find(x => x.InternalName.Equals("Left menu")).TermString" Template="#LeftMenu" textAlign="Center" type="string"></e-grid-column>
        <e-grid-column headerText="@Term.Find(x => x.InternalName.Equals("Right menu")).TermString" Template="#RightMenu" textAlign="Center" type="string"></e-grid-column>
        <e-grid-column headerText="@Term.Find(x => x.InternalName.Equals("Edit")).TermString" Template="#Edit" textAlign="Center" type="string"></e-grid-column>
        <e-grid-column headerText="@Term.Find(x => x.InternalName.Equals("Delete")).TermString" Template="#Delete" textAlign="Center" type="string"></e-grid-column>
    </e-grid-columns>
</ejs-grid>
<a href="~/UserMenu/Create">@Term.Find(x => x.InternalName.Equals("Add user menu")).TermString</a>
<script id="Id" type="text/x-">
    <div>
        ${UserMenuId}
    </div>
</script>
<script id="Name" type="text/x-">
    <div>
        ${Name}
    </div>
</script>
<script id="LeftMenu" type="text/x-">
    <div>
        ${LeftMenuName}
    </div>
</script>
<script id="RightMenu" type="text/x-">
    <div>
        ${RightMenuName}
    </div>
</script>
<script id="Edit" type="text/x-">
    <div>
        <a class="nav-link text-dark font-weight-bold" href="/UserMenu/Edit/${UserMenuId}"><span style="color:red">E</span>dit</a>

    </div>
</script>
<script id="Delete" type="text/x-">
    <div>
        <a class="nav-link text-dark font-weight-bold" href="UserMenu/Delete/${UserMenuId}"><span style="color:red">D</span>elete</a>

    </div>
</script>
