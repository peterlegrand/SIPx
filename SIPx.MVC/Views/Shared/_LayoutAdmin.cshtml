                                </ejs-dropdownlist>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button href="#" id="Favorites">@UITermLayout.Find(x => x.InternalName.Equals("Add")).TermString</button>
                </div>
            </div>
        </div>
