<script>
    $(document).ready(function () {
        $("#Favorites").click(function () {
            var Favorite = {
                controller: 'Classification',
                action: 'Create',
                name: document.getElementById("FavoriteName").value,
                MVCFavoriteGroupId: document.getElementById("FavoriteGroupId_hidden").value
