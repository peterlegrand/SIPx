@model List<NewProcessShowTemplateGroup>
@{
    var Term = (List<UITermLanguageCustomizationList>)ViewBag.UITerms;
    //ViewData["Title"] = @Term.Find(x => x.InternalName.Equals("Classifications")).TermString;

}
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
<h1><img src="~/images/icons/Process.png" width="50" height="50" />Process templates</h1><a data-toggle="modal" data-target="#exampleModal" style="cursor: pointer">
    <img src="~/images/icons/Favorites.png" width="20" height="20" title="@Term.Find(x => x.InternalName.Equals("Add favorite")).TermString" />
</a>

<div class=" control-section">
    @foreach (var x in Model)
    {
        if (x.templates.Count > 0)
        {
            <div class="font-weight-bold" hidden>@x.ProcessTemplateGroupId</div>
            <div class="font-weight-bold"><h2>@x.Name</h2></div>
            @foreach (var y in x.templates)
            {
                <a class="nav-link text-dark font-weight-bold" asp-controller="FrontProcess" asp-action="Create" asp-route-id="@y.ProcessTemplateId"><img src="@y.FileName" width="15" height="15" />&nbsp @y.Name</a>
            }
        }
    }
</div>
