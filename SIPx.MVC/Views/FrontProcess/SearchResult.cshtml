@model List<ProcessAdvancedSearchResult>
@{
    var AllStuff = (ViewBagModel)ViewBag.AllStuff;
    ViewData["Title"] = @AllStuff.UITerms.Find(x => x.InternalName.Equals("Process search result")).TermString;
    ViewData["Image"] = "Process.png";
    ViewData["FavoriteGroup"] = AllStuff.FavoriteGroupList;
    Layout = "_Layout";
}
<div class="container">
    <ejs-grid id="Grid" dataSource="@Model" allowPaging="true" allowSorting="true" allowResizing="true">
        <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
        <e-grid-columns>
            <e-grid-column headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Subject")).TermString" template="#Subject" textAlign="Center" type="string"></e-grid-column>
            <e-grid-column headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Process template")).TermString" template="#Template" textAlign="Center" type="string"></e-grid-column>
            <e-grid-column headerText="@AllStuff.UITerms.Find(x => x.InternalName.Equals("Stage")).TermString" template="#Stage" textAlign="Center" type="string"></e-grid-column>
        </e-grid-columns>
    </ejs-grid>
</div>
<script id="Subject" type="text/x-template">
    <div class="leftAlignGridColumn">
        <a class="nav-link text-dark font-weight-bold" href="/FrontProcess/View/${ProcessId}"><u>${Subject}</u></a>
    </div>
</script>
<script id="Template" type="text/x-template">
    <div class="leftAlignGridColumn">
        ${ProcessTemplateName}
    </div>
</script>
<script id="Stage" type="text/x-template">
    <div class="leftAlignGridColumn">
        ${ProcessTemplateStageName}
    </div>
</script>
